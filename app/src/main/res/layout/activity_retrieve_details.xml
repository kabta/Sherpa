<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >
    <LinearLayout
        android:id="@+id/place"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"

        >
        <TextView
            android:id="@+id/placename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemimage"
            android:layout_marginTop="10dp"
            android:text="Chinese Gumba"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="@color/design_default_color_primary"/>

      <ImageView
            android:id="@+id/itemimage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/placename"
            android:layout_marginTop="10dp"
          android:src="@drawable/stupa"
            />



      <TextView
            android:id="@+id/details"
            android:textSize="16sp"
            android:text="Chinese Gumba also knownas Shanti Stupa, in Pokhara was built by Nipponzan-Myōhōji monk Morioka Sonin with local supporters under the guidance of Nichidatsu Fujii, a Buddhist monk and the founder of Nipponzan-Myōhōji. Shanti is a Sanskrit word meaning peace, also widely used in the Nepali and Hindi languages, and Shanti Stupa means Peace Pagoda. Shanti Stupa shrine was built as a symbol of peace. "
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/locate_button"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locate On Map"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>